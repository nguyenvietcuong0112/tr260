            <TextView
                android:id="@+id/tv_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="@color/icon_inactive"
                android:textSize="12sp" />
        </LinearLayout>
